<html>

    <head>
        {{#pageTitle}}
        <title>{{pageTitle}}</title>
        {{/pageTitle}}
        {{^pageTitle}}
        <title>{{helpers.defaultPageTitle}}</title>
        {{/pageTitle}}
    </head>

    <body>
        <h1>Learning NodeJS</h1>
        <hr>        
        <ul>
            {{#helpers.menu}}
            <li><a href="{{slug}}">{{name}}</a></li>
            {{/helpers.menu}}
        </ul>
        <hr>
        {{#flashes}}
            {{#sucess}}
                <div>{{.}}</div>
            {{/sucess}}
            {{#error}}
                <div>{{.}}</div>
            {{/error}}
            {{#info}}
                <div>{{.}}</div>
            {{/info}}
        {{/flashes}}
    </body>

</html>
